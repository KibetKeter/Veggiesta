<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Sign_up">

    <TextView
            android:text="@string/sign_up"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/textView"
            android:textSize="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="52dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:paddingLeft="100dp"
            android:fontFamily="@font/dosis_bold"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="-56dp"
            tools:layout_editor_absoluteX="0dp">


        <EditText
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:inputType="textEmailAddress"
                android:hint="E-Mail"
                android:ems="10"
                android:id="@+id/editTextTextEmailAddress"
                android:height="150dp"
                android:width="380dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="127dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:paddingLeft="20dp"
                android:background="@drawable/input_box"
                app:layout_constraintEnd_toEndOf="parent"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:hint="Password"
                android:ems="10"
                android:id="@+id/editTextTextPassword"
                android:height="50dp"
                android:width="380dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="44dp"
                android:background="@drawable/input_box"
                app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:inputType="textAutoComplete"
                android:hint="First Name"
                android:id="@+id/First_Name"
                android:ems="10"
                android:height="50dp"
                android:width="380dp"
                android:layout_margin="20dp"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:background="@drawable/input_box"
                tools:layout_editor_absoluteX="15dp"
                app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword"
                tools:ignore="MissingConstraints"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp" />
        <EditText
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:inputType="textAutoComplete"
                android:id="@+id/Last_Name"
                android:hint="Last Name"
                android:ems="10"
                android:height="50dp"
                android:width="380dp"
                android:paddingLeft="20dp"
                android:background="@drawable/input_box"
                android:layout_marginRight="15dp"
                tools:layout_editor_absoluteX="15dp"
                app:layout_constraintTop_toBottomOf="@+id/First_Name"
                tools:ignore="MissingConstraints"
                android:layout_marginTop="28dp"/>
        <Button
                android:text="SIGN UP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                android:height="50dp"
                android:background="@drawable/btn_rounded"
                android:width="380dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.743"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
