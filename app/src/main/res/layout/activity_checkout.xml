<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Checkout">
    <TextView
            android:text="Checkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkout_header"
            android:height="87dp"
            android:width="413dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="100dp"
            android:paddingTop="30dp"
            android:fontFamily="@font/roboto_bold"
            android:textSize="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:paddingStart="160dp"
            android:background="#52D66F"
            tools:ignore="MissingConstraints"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="Cart"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:id="@+id/cart_cart"
                android:textSize="50px"
                android:fontFamily="@font/dosis_bold"
                tools:layout_editor_absoluteY="113dp"
                tools:layout_editor_absoluteX="16dp"
                tools:ignore="MissingConstraints"/>
        <TextView
                android:text="Order Details"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:id="@+id/order_cart"
                android:textSize="50px"
                android:fontFamily="@font/dosis_bold"
                tools:layout_editor_absoluteY="212dp"
                tools:layout_editor_absoluteX="16dp"
                tools:ignore="MissingConstraints"/>
        <TextView
                android:text="Delivery Address"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:id="@+id/delivery_cart"
                android:textSize="50px"
                android:fontFamily="@font/dosis_bold"
                tools:layout_editor_absoluteY="315dp"
                tools:layout_editor_absoluteX="16dp"
                tools:ignore="MissingConstraints"/>
        <TextView
                android:text="Payment Method"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:id="@+id/payment_cart"
                android:textSize="50px"
                android:fontFamily="@font/dosis_bold"
                tools:layout_editor_absoluteY="423dp"
                tools:layout_editor_absoluteX="16dp"
                tools:ignore="MissingConstraints"/>
        <Button
                android:text="Add delivery address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/delivery_address"
                app:layout_constraintStart_toEndOf="@id/payment_cart"
                tools:layout_editor_absoluteY="361dp"
                tools:ignore="MissingConstraints"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Additional Comments"
                android:ems="10"
                android:id="@+id/editTextTextPersonName"
                tools:layout_editor_absoluteY="249dp"
                tools:layout_editor_absoluteX="103dp"
                app:layout_constraintTop_toBottomOf="@id/order_cart" tools:ignore="MissingConstraints"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
            android:text="@string/placeorder"
            android:layout_width="373dp"
            android:layout_height="53dp"
            android:id="@+id/checkoutbutton"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="642dp"
            tools:ignore="MissingConstraints"/>


</androidx.constraintlayout.widget.ConstraintLayout>